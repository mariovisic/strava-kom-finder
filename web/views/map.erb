<div class="map-container">
  <div id="map"></div>
  <div id="map-sidebar">
    <h2>Segments</div>
  </div>
</div>

<script type="text/template" id="segmentTemplate">
  <div class="segment" style="background: hsl({ this.hsl }, 100%, 33%);">
    <h3 class="segment__name">{ this.name }</h3>
    <div class="segment__info">{ this.distance }km at { this.grade }%</div>
    <div class="segment__kom_speed">KOM Speed: { this.KOMSpeed }km/h</div>
    <div class="segment__estimated_speed">Your Estimated Speed: { this.estimatedSpeed }km/h</div>
  </div>
</script>
