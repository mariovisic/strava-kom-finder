<html>
  <head>
    <title>Strava KOM Finder</title>
    <link href="/application.css" media="screen" rel="stylesheet" type="text/css" />
    <script async defer src="https://maps.googleapis.com/maps/api/js?key=<%=ENV['GOOGLE_MAPS_API_KEY'] %>&callback=initMap&libraries=geometry"> </script>
  </head>
  <body>
    <% if logged_in? %>
      <nav>
        <ul>
          <li>Logged in as: <%= "#{current_user[:full_name]} (#{current_user[:username]})"%></li>
          <li><a href="/">Home</a></li>
          <li><a href="/map">Map</a></li>
          <li><a href="/logout">Logout</a></li>
        </ul>
      </nav>
    <% end %>

    <%= yield %>
    <script type="text/javascript" src="/application.js"></script>
  </body>
</html>
